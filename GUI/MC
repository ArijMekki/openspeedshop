# This file is used to clean out the entire directory of all 
# non-essential files.


#!/bin/sh

make clean
make distclean

bootstrap --clean

rm -fr plugin/lib
rm -fr plugin/bin
mkdir plugin/lib
mkdir plugin/bin
mkdir plugin/lib/futuretool


clear
rm -fr docs/*;
rm -fr ftd
cd ftf
make clean
cd ..
make clean


for i in `find . -name *.o -print`
do
  echo removing $i
  rm $i
done
for i in `find . -name *.so* -print`
do
  echo removing $i
  rm $i
done
for i in `find . -name *.a -print`
do
  echo removing $i
  rm $i
done

# now just to make sure.
echo pwd=`pwd`
for i in `find . -name *.o -print`
do
  echo removing $i
  rm $i
done
echo pwd=`pwd`
for i in `find . -name "*.la" -print`
do
  echo removing $i
  rm $i
done
for i in `find . -name "*.lo" -print`
do
  echo removing $i
  rm $i
done
for i in `find . -name "*.so" -print`
do
  echo removing $i
  rm $i
done
echo pwd=`pwd`
for i in `find . -name *.a -print`
do
  echo removing $i
  rm $i
done

for i in `find . -name "ii_*" -print`
do
  echo removing $i
  rm -fr $i
done
for i in `find . -name ".libs" -print`
do
  echo removing $i
  rm -fr $i
done

for i in `find . -name so_locations -print`
do
  echo removing $i
  rm $i
done

for i in `find . -name Makefile -print`
do
  echo removing $i
  rm $i
done

for i in `find . -name Makefile.in -print`
do
  echo removing $i
  rm $i
done

for i in `find . -name Makefile.in -print`
do
  echo removing $i
  rm $i
done

for i in `find . -name Makefile -print`
do
  echo removing $i
  rm $i
done

rm -fr config.status
