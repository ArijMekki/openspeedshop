#!/bin/sh
if [ "$FUTURE_TOOL_PLUGIN_DIR" = "" ]
then
  echo "FUTURE_TOOL_PLUGIN_DIR not set."
  echo "For oss developers that's usually .../GUI/plugin/lib/futuretool"
  exit
fi
if test -d Panels
then
  ./MC;bootstrap;configure --prefix=$FUTURE_TOOL_PLUGIN_DIR/../..;make;make install;
else
  echo NOTE: This must be run from the GUI directory...
fi
